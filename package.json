{
  "name": "messenger_yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "start": "npm run build && node ./src/server.js",
    "preview": "vite preview",
    "lint:ts": "eslint . --ext .ts --fix --ignore-pattern \"*.d.ts\"",
    "prettier": "prettier . --write",
    "lint:styles": "stylelint '**/*.scss' --fix",
    "lint": "npm run lint:ts && npm run lint:styles && npm run prettier",
    "test": "./node_modules/.bin/mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier . --write",
    "*.ts": "eslint . --fix --ignore-pattern \"*.d.ts\"",
    "**/*.scss": "stylelint --fix",
    "**/*.test.ts": "./node_modules/.bin/mocha"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.20",
    "@types/handlebars": "^4.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.8.9",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.10",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "sass": "^1.69.5",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.1"
  }
}
